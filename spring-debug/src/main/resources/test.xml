<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.poplar.bean"/>
    <bean id="student1" class="com.poplar.bean.Student">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="七猫猫"/>
    </bean>

    <bean id="student2" class="com.poplar.bean.Student">
        <constructor-arg value="2" name="id"/>
        <constructor-arg name="name" value="六猫猫"/>
    </bean>
</beans>